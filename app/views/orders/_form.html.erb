    <%= form.label :sold_out_until, style: "display: block" %>
    <%= form.date_field :sold_out_until %>
  </div>

  <div>
    <%= form.label :discontinued, style: "display: block" %>
    <%= form.check_box :discontinued %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price %>
  </div>

  <div>
    <%= form.submit %>
  </div>
